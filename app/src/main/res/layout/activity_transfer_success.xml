<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/success_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size18"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/circular_bead_blue"
        android:text="@string/transfer_success"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transfer_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_font_color"
            android:textSize="@dimen/font_size30"/>

        <TextView
            android:id="@+id/transfer_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/title_font_color"
            android:textSize="@dimen/font_size30"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/font_size14"
        android:text="@string/detailed_information_is_as_follows"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circular_bead_gray_8px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/wallet_address"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/wallet_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />
        </RelativeLayout>

        <View
            style="@style/Ge_Line_V_Style"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/transfer_amount"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/transfer_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />
        </RelativeLayout>
        <View
            style="@style/Ge_Line_V_Style"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/cost_of_absenteeism"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/cost_of_absenteeism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />
        </RelativeLayout>
        <View
            style="@style/Ge_Line_V_Style"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/remarks"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />

            <TextView
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_remarks"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size14" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>