<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:padding="12dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="导出私钥"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/chacha" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/button_round_red">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:text="安全警告: 私钥未经加密，导出存在风险，建议使用助记词和Keystore 进行备份。"
            android:textSize="13sp"
            android:textColor="#d04228"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/button_round_gray_two">
        <TextView
            android:id="@+id/tv_privatekey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:text="d025fe66fedf4832cd60214539b786ad66a17609cb68b21142ad35781fda06ad"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_copy"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/button_round_blue"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="复制"/>
</LinearLayout>