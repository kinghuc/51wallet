<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.carefree.coldwallet.ui.fragments.ImportMemoriziWordsFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round_gray">
            <EditText
                android:gravity="start"
                android:id="@+id/et_wallet_memic"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="请输入助记词（按空格隔开）"
                android:textSize="13sp"
                android:background="@null"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_wallet_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="钱包名称"
            android:lines="1"
            android:maxLength="10"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_wallet_password"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:lines="1"
            android:maxLength="16"
            android:hint="6-16位字母、数字的密码"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_wallet_repassword"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="重复密码"
            android:inputType="textPassword"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:lines="1"
            android:maxLength="16"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_wallet_password_tip"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:lines="1"
            android:maxLength="10"
            android:hint="密码提示信息(可不填)"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_tiaokuang_click"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_gou"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/gou_unselect"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已经仔细阅读并同意"
                    android:textColor="#000000"
                    android:textSize="13sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/secret_tip"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务及隐私条款"
                android:textColor="#00B1bf"
                android:textSize="13sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_import"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="开始导入"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:enabled="false"
            android:background="@drawable/button_round_gray_two"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_memic_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="什么是助记词？"
            android:textColor="#00B1bf"
            android:textSize="13sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

</LinearLayout>
