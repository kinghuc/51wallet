<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.carefree.coldwallet.ui.activitys.MineWalletActivity">

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/wallet_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="49dp"
                android:src="@mipmap/header"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/wallet_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_color_b3333333"
                android:textSize="@dimen/font_size16"
                android:text="钱包名称"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/wallet_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="@color/text_color_b3333333"
                android:textSize="@dimen/font_size12"
                android:text="111111111111111"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:textColor="@color/text_color_666666"
                android:text="@string/wallet_name"
                android:textSize="@dimen/font_size16"/>

            <TextView
                android:id="@+id/et_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:textColor="@color/text_color_666666"
                android:text="钱包名称"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_alter_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:textColor="@color/text_color_666666"
                android:text="@string/change_password"
                android:textSize="@dimen/font_size16"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@mipmap/right_return"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_alter_private_key"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="@string/export_private"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@mipmap/right_return" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_alter_keystore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="@string/export_keystore"
                android:textColor="@color/text_color_666666"
                android:textSize="@dimen/font_size16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@mipmap/right_return" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_delete_wallet"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circular_bead_blue_10px"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size18"
            android:text="@string/delete_wallet"/>
    </LinearLayout>


</LinearLayout>
