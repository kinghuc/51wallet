<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.carefree.coldwallet.ui.activitys.BackupMemicActivity">

    <include layout="@layout/layout_head" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="抄写下你的钱包助记词"
            android:textColor="@color/four_font_color"
            android:textSize="@dimen/font_size16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="助记词用于恢复钱包或重置钱包密码，将它准确的抄写到纸上，并存放在的只有你知道的安全的地方。"
            android:textColor="@color/hint_text_color"
            android:textSize="@dimen/font_size14" />

        <TextView
            android:id="@+id/tv_memic"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/circular_bead_white_10px"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="honey hub eagle robot envelope text trouble repair pizza engine vault code"
            android:textSize="@dimen/font_size14" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/circular_bead_blue_10px"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size18"
            android:text="@string/next_step"/>

    </LinearLayout>
</LinearLayout>
