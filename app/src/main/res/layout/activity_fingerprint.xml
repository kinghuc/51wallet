<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>

    <com.carefree.coldwallet.commons.views.swipemenu.SwipeMenuListView
        android:id="@+id/menuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:scrollbars="none">

    </com.carefree.coldwallet.commons.views.swipemenu.SwipeMenuListView>

    <TextView
        android:id="@+id/add_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/circular_bead_blue_10px"
        android:enabled="false"
        android:text="@string/add_fingerprint"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size18" />
</LinearLayout>